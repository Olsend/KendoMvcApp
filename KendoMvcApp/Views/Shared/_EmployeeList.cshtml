@model KendoMvcApp.Models.EmployeeDetailList


<h2>Employee</h2>
<div class="container">
    <div class="row">

        @(Html.Kendo().Grid<KendoMvcApp.Models.EmployeeDetailList>()
    .Name("EmpGrid")
    .Selectable()
    .Columns(columns =>
    {
        columns.Bound(c => c.EmployeeID);
        columns.Bound(c => c.FirstName);
        columns.Bound(c => c.LastName);

    })
    .DataSource(dataSource => dataSource
        .Ajax()
        .Read(read => read.Action("EmployeeList", "Employee"))
        )
        )
</div>
    </div>

