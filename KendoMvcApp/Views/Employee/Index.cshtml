@model KendoMvcApp.Models.Employee

@{
    ViewBag.Title = "Index";
    
}

<h2>Employee</h2>
<div class="container">
    <div class="row">

       <br />
        @(Html.Kendo().Window()
        
        .Name("window")
        .Width(630)
        .Height(315)
        .Draggable()
        .Resizable()
        //.Modal(true)
        
        .Title("Employee List Grid")
        //.Actions(actions => actions.Pin().Refresh().Maximize().Close())
        .LoadContentFrom("Demo", "Employee")
        )
        
       
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        debugger;
        var myWindow = $("#window");
        myWindow.visible(false)
        $("#open").click(function (e) {
            debugger;
            myWindow.data("kendoWindow").open();
            myWindow.visible(true);
        });

       
    });
</script>

